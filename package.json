  "description": "A lightweight Node.js actuator similar to Spring Boot actuator with Prometheus integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
