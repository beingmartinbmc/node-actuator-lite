    "health",
    "nodejs",
    "express",
    "spring-boot"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:beingmartinbmc/node-actuator-lite.git"
  },
  "bugs": {
    "url": "https://github.com/beingmartinbmc/node-actuator-lite/issues"
  },
  "homepage": "https://github.com/beingmartinbmc/node-actuator-lite#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "os-utils": "^0.0.14",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.0",
    "systeminformation": "^5.21.25",
    "uuid": "^9.0.1"
